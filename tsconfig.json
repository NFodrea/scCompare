{
  "compilerOptions": {
      "target": "es2015",
      "sourceMap": true,
      "paths": {
          "~/*": ["./src/*"]
      },
      "outDir": "./build",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["dom", "es2015", "es2016", "es2017.object"],
      "jsx": "react",
      "resolveJsonModule": true,
      "types": [],
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      // pedantic flags
      "noUncheckedIndexedAccess": true
  },
  "include": ["src", "types"]
}
